<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_local_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingRight="8dp"
        android:paddingTop="6dp" />

    <TextView
        android:id="@+id/widget_local_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:text="Mad" />

    <TextView
        android:id="@+id/widget_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:text="0-0"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/widget_away_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:text="Bar" />

    <ImageView
        android:id="@+id/widget_away_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingRight="8dp"
        android:paddingTop="6dp" />

    <TextView
        android:id="@+id/widget_match_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.2"
        android:text="Status" />

    <Button
        android:id="@+id/widget_itbr_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:minHeight="40dp"
        android:padding="0dp"
        android:text="VER" />
</LinearLayout>
